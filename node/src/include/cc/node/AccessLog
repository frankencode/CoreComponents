#pragma once

#include <cc/node/Log>

namespace cc { template<class> class ThreadLocalSingleton; }

namespace cc {
namespace node {

class AccessLog: public Log
{
public:
    static AccessLog *instance();

private:
    friend class ThreadLocalSingleton<AccessLog>;
};

}} // namespace cc::node
