#pragma once

#include <cc/Application>
#include <cc/Timer>

namespace cc {

class SdlWindow;

class SdlApplication final: public Application
{
public:
    SdlApplication();

    void triggerTimer(const Timer &timer);

private:
    friend class SdlWindow;

    struct State;

    void registerWindow(const SdlWindow &window);

    const State &me() const;
    State &me();
};

} // namespace cc
