#pragma once

#include <cc/Vector>

namespace cc {

/** %Raster point
  */
using Point = Vector<double, 2>;

/** %Raster dimensions
  */
using Size = Vector<double, 2>;

/** %Point delta type
  */
using Step = Vector<double, 2>;

/** Scaling type
  */
using Scale = Vector<double, 2>;

} // namespace cc
