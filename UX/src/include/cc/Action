#pragma once

#include <cc/View>
#include <cc/Shortcut>
#include <cc/Entity>

namespace cc {

/** \class Action cc/Action
  * \ingroup ui
  * \brief Explorable function within an application
  */
class Action final: public Entity
{
public:
    /** Create a primordial action
      */
    Action();

    /** Create a new action with given \a title
      */
    explicit Action(const String &title);

    /** Create a new action with given \a title and \a shortcut
      */
    Action(const String &title, Shortcut shortcut);

    /** Create a new action with given \a icon
      * \see Picture, ImageView
      */
    Action(const View &icon);

    String title() const; ///< Get title
    Action &title(const String &newValue); ///< Set title
    Action &title(Definition<String> &&f); ///< Define title

    Shortcut shortcut() const; ///< Get shortcut
    Action &shortcut(const Shortcut &newValue); ///< Set shortcut
    Action &shortcut(Definition<Shortcut> &&f); ///< Define shortcut

    View icon() const; ///< Get icon
    Action &icon(const View &newValue); ///< Set icon
    Action &icon(Definition<View> &&f); ///< Define icon

private:
    struct State;

    State &me();
    const State &me() const;
};

} // namespace cc
