#pragma once

#include <cc/InputControl>
#include <cc/Ideographic>

namespace cc {

/** \class ElevatedButton cc/ElevatedButton
  * \ingroup ui
  * \brief Elevated button
  */
class ElevatedButton final: public InputControl
{
public:
    /** Create a primordial elevated button
      */
    ElevatedButton();

    /** Get a weak reference in \a self
      */
    ElevatedButton &associate(Out<ElevatedButton> self);

    String text() const; ///< Get the button's label text
    ElevatedButton &text(const String &newValue); ///< %Set the button's label text
    ElevatedButton &text(Definition<String> &&f); ///< Define the button's label text

    ElevatedButton &icon(Ideographic ch); ///< %Set leading decoration icon
    ElevatedButton &leading(const View &view); ///< %Set leading decoration

private:
    struct State;

    State &me();
    const State &me() const;
};

} // namespace cc
