#pragma once

#include <cc/String>

namespace cc {
namespace sfnt {

class LookupTable: public Object
{
    friend class Object;

public:
    uint16_t lookupType() const { return lookupType_; }
    uint16_t lookupFlags() const { return lookupFlags_; }

protected:
    LookupTable(const CharArray *data);
    void init() override;

    virtual void readSubTable(const CharArray *data) = 0;

private:
    Ref<CharArray> data_;
    uint16_t lookupType_;
    uint16_t lookupFlags_;
};

}} // namespace cc::sfnt
