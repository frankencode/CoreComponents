#pragma once

#include <cc/String>
#include <cc/sfnt/LigratureSubstitutionTable>

namespace cc {
namespace sfnt {

/** \brief OpenType GSUB (Glyph Substitution) table
  */
class GlyphSubstitutionTable: public Object
{
public:
    static Ref<GlyphSubstitutionTable> open(const CharArray *data);

    uint16_t majorVersion() const { return majorVersion_; }
    uint16_t minorVersion() const { return minorVersion_; }

    Ref<LigratureSubstitutionTable> open() const;

private:
    GlyphSubstitutionTable(const CharArray *data);

    Ref<const CharArray> data_;

    uint16_t majorVersion_;
    uint16_t minorVersion_;
    uint16_t lookupListOffset_;
};

}} // namespace cc::sfnt
