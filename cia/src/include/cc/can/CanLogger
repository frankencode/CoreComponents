#pragma once

#include <cc/can/CanMedia>
#include <cc/Worker>

namespace cc {
namespace can {

class CanLogger: public Object
{
public:
    static Ref<CanLogger> create(CanMedia *media);

private:
    CanLogger(CanMedia *media);
    void bootstrap();
    void run();

    Ref<CanMedia> media_;
    Worker worker_;
};

}} // namespace cc::can
