#pragma once

#include <cc/claim/Notice>
#include <cc/SyntaxDefinition>

namespace cc::claim {

class NoticeSyntax final: public SyntaxDefinition
{
public:
    NoticeSyntax();

    Notice readNotice(const Header &header) const;

private:
    struct State;

    const State &me() const;
};

} // namespace cc::claim
