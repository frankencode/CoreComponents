#pragma once

#include <cc/build/BuildStage>

namespace cc::build {

class UninstallStage: public BuildStage
{
public:
    bool run();
    bool uninstallTool(const Module &module);
    bool uninstallApplicationOrLibrary();
};

} // namespace cc::build
