#pragma once

#include <cstdint>

namespace cc::isobus {

/** \brief On/off switch state
  */
enum class SwitchState: uint32_t
{
    Off = 0,
    On  = 1,
    Error = 2,
    Undef = 3,
    Disabled = Off,
    Enabled = On
};

} // namespace cc::isobus
