#pragma once

#include <cc/Token>

namespace cc {
namespace meta {

class MetaToken: public Token
{
public:
    virtual const MetaToken *getMemberNameToken(const CharArray *text, const String &memberName) const = 0;
    virtual const MetaToken *getMemberValueToken(const CharArray *text, const String &memberName) const = 0;
    virtual const MetaToken *getChildToken(int childIndex) const = 0;

protected:
    MetaToken(int scope, int rule):
        Token{scope, rule}
    {}
};

}} // namespace cc::meta
