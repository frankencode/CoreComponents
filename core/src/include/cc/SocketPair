#pragma once

#include <cc/IoChannel>

namespace cc {

/** \brief Bi-directional I/O channel
  * \see Spawn
  */
class SocketPair: public IoChannel
{
public:
    class Instance: public IoChannel::Instance
    {
    private:
        friend class SocketPair;

        Instance();
    };

    SocketPair():
        IoChannel{new Instance}
    {}
};

} // namespace cc
