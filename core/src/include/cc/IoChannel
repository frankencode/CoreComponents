#pragma once

#include <cc/SystemStream>

namespace cc {

class IoChannel: public Object
{
public:
    int masterFd() const;
    int slaveFd() const;

    Ref<SystemStream> open() const;

protected:
    IoChannel();

    int masterFd_;
    int slaveFd_;
};

} // namespace cc
