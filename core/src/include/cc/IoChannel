#pragma once

#include <cc/Object>

namespace cc {

class IoChannel: public Object
{
public:
    int masterFd() const { return masterFd_; }
    int slaveFd() const { return slaveFd_; }

protected:
    IoChannel(): masterFd_{-1}, slaveFd_{-1} {}

    int masterFd_;
    int slaveFd_;
};

} // namespace cc
