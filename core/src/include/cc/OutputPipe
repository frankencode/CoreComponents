#pragma once

#include <cc/InputPipe>

namespace cc {

class InputPipe;

/** \brief Child process output pipe
  * \see Spawn, InputPipe
  */
class OutputPipe: public IoChannel
{
public:
    static Ref<OutputPipe> create();

    Ref<InputPipe> connectInput() const;

private:
    friend class InputPipe;

    OutputPipe();
};

} // namepspace cc
