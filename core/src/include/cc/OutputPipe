#pragma once

#include <cc/InputPipe>

namespace cc {

/** \brief Child process output pipe
  * \see InputPipe
  */
class OutputPipe: public IoChannel
{
public:
    class Instance: public IoChannel::Instance
    {
    private:
        friend class OutputPipe;

        Instance();
        void onStart() override;
    };

    OutputPipe():
        IoChannel{new Instance}
    {}
};

} // namepspace cc
