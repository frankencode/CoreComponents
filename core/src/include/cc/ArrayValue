#pragma once

#include <initializer_list>
#include <cc/Array>
#include <cc/Format>

namespace cc {

/** \class ArrayValue cc/ArrayValue
  * \ingroup container_highlevel
  * \brief %Array data container
  * \tparam T item type
  */
template<class T>
class ArrayValue {
public:
    typedef Array<T> Instance;
    typedef typename Instance::value_type value_type;
    typedef typename Instance::size_type size_type;
    typedef typename Instance::iterator iterator;
    typedef typename Instance::const_iterator const_iterator;

    ArrayValue(size_type size):
        instance_{new Instance{size}}
    {}

    ArrayValue(std::initializer_list<T> b):
        instance_{new Instance{static_cast<size_type>(b.size())}}
    {
        size_type i = 0;
        for (const auto &x: b) {
            instance_->at(i) = x;
            ++i;
        }
    }

    ArrayValue(const ArrayValue &b) = default;

    ArrayValue(ArrayValue &&b):
        instance_{std::move(b.instance_)}
    {}

    ArrayValue &operator=(const ArrayValue &b) = default;

    ArrayValue &operator=(ArrayValue &&b) {
        instance_ = std::move(b.instance_);
        return *this;
    }

    ArrayValue(Instance *b):
        instance_{b}
    {}

    const Instance *operator->() const { return instance_; }
    Instance *operator->() { return Cow::get(instance_); }

    operator const Instance *() const { return instance_; }
    operator Instance *() { return Cow::get(instance_); }

    T &operator[](size_type i) { return Cow::get(instance_)->at(i); }
    const T &operator[](size_type i) const { return instance_->at(i); }

private:
    explicit operator bool() const;

    Ref<Instance> instance_;
};

template<class T>
typename ArrayValue<T>::size_type count(const ArrayValue<T> &a) { return a->count(); }

template<class T>
typename ArrayValue<T>::const_iterator begin(const ArrayValue<T> &a) { return a->begin(); }

template<class T>
typename ArrayValue<T>::const_iterator end(const ArrayValue<T> &a) { return a->end(); }

template<class T>
typename ArrayValue<T>::iterator begin(ArrayValue<T> &a) { return a->begin(); }

template<class T>
typename ArrayValue<T>::iterator end(ArrayValue<T> &a) { return a->end(); }

template<class T>
bool operator==(const ArrayValue<T> &a, const ArrayValue<T> &b) { return container::compare(a, b) == 0; }

template<class T>
bool operator!=(const ArrayValue<T> &a, const ArrayValue<T> &b) { return container::compare(a, b) != 0; }

template<class T>
bool operator<(const ArrayValue<T> &a, const ArrayValue<T> &b) { return container::compare(a, b) < 0; }

template<class T>
bool operator>(const ArrayValue<T> &a, const ArrayValue<T> &b) { return container::compare(a, b) > 0; }

template<class T>
bool operator<=(const ArrayValue<T> &a, const ArrayValue<T> &b) { return container::compare(a, b) <= 0; }

template<class T>
bool operator>=(const ArrayValue<T> &a, const ArrayValue<T> &b) { return container::compare(a, b) >= 0; }

template<class T>
String str(const ArrayValue<T> &a)
{
    Format f;
    f << "[ ";
    for (auto &x: a)
        f << x << (&x == &a->last() ? " ]" : ", ");
    return f;
}

} // namespace cc
