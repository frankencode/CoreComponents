#pragma once

#include <cc/String>
#include <cc/PropertyBinding>
#include <utility>

namespace cc {

template<class T>
class PropertyMutator;

template<class T>
class Property
{
public:
    Property(): instance_(Instance::create()) {}
    Property(const T &b): instance_(Instance::create(b)) {}

    Property(const Property &b): Property(b->value()) {}
    inline Property &operator=(const Property &b) { instance_->setValue(b->value()); return *this; }

    Property(Property &&b): instance_(std::move(b.instance_)) {}
    inline Property &operator=(Property &&b) { instance_ = std::move(b.instance_); return *this; }

    Property(const std::function<T()> &f): instance_(Instance::create()) { instance_->associate(f); }
    inline Property &operator=(const std::function<T()> &f) { instance_->bind(f); return *this; }

    ~Property() { instance_->disband(); }

    class Instance: public PropertyBinding {
    public:
        template<class F>
        void bind(const F &f)
        {
            clearDependencies();

            f_ = f;
            dirty_ = false;
            cascade();
        }

        template<class F>
        void associate(const F &f)
        {
            clearDependencies();

            f_ = f;
            dirty_ = true;
        }

        template<class G>
        void restrict(const G &g)
        {
            g_ = g;
        }

        template<class H>
        void connect(const H &h)
        {
            if (dirty_) {
                dirty_ = false;
                evaluate();
            }

            changed->connect(h);
        }

    private:
        friend class Property;
        friend class PropertyMutator<T>;

        template<class T2>
        friend Property<T2> alias(Property<T2> &p);

        inline static Ref<Instance> create(const T &b = T{}) { return new Instance{b}; }

        Instance(const T &b):
            PropertyBinding(false),
            value_(b)
        {}

        Property alias() { return Property(this, true); }

        const T &value() const
        {
            preAccess();
            return value_;
        }

        void setValue(const T &newValue)
        {
            if (f_) {
                clearDependencies();
                f_ = std::function<T()>{};
                dirty_ = false;
            }
            establish(newValue);
        }

        void evaluate() override
        {
            establish(f_());
        }

        void establish(T newValue)
        {
            if (g_ && !g_(newValue, value_))
                return;
            store(newValue);
        }

        inline void store(const T &newValue)
        {
            if (value_ != newValue) {
                value_ = newValue;
                emit();
            }
        }

        void disband() override
        {
            PropertyBinding::disband();
            value_ = T{};
            f_ = std::function<T()>{};
        }

        mutable T value_;
        std::function<T()> f_;
        std::function<bool(T&, T)> g_;
    };

    inline Instance *operator->() { return instance_; }
    inline const Instance *operator->() const { return instance_; }

    inline T operator()() const { return instance_->value(); }

    inline Property &operator=(const T &b) { instance_->setValue(b); return *this; }

    template<class T2>
    inline Property &operator=(const T2 &b) { instance_->setValue(T(b)); return *this; }

    template<class T2>
    inline Property &operator+=(const T2 &b) { instance_->setValue(instance_->value() + b); return *this; }

    template<class T2>
    inline Property &operator-=(const T2 &b) { instance_->setValue(instance_->value() - b); return *this; }

    template<class T2>
    inline Property &operator*=(const T2 &b) { instance_->setValue(instance_->value() * b); return *this; }

    template<class T2>
    inline Property &operator/=(const T2 &b) { instance_->setValue(instance_->value() / b); return *this; }

private:
    friend class Instance;

    Property(Instance *instance, bool): instance_(instance) {}

    Ref<Instance> instance_;
};

template<>
class Property<void>
{
public:
    Property(): instance_(Instance::create()) {}

    Property(Property &&b): instance_(std::move(b.instance_)) {}
    inline Property &operator=(Property &&b) { instance_ = std::move(b.instance_); return *this; }

    Property(const std::function<void()> &f): instance_(Instance::create()) { instance_->associate(f); }
    inline Property &operator=(const std::function<void()> &f) { instance_->bind(f); return *this; }

    ~Property() { instance_->disband(); }

    class Instance: public PropertyBinding {
    public:
        template<class F>
        void bind(const F &f)
        {
            clearDependencies();

            f_ = f;
            dirty_ = false;
            cascade();
        }

        template<class F>
        void associate(const F &f)
        {
            clearDependencies();

            f_ = f;
            dirty_ = true;
        }

        template<class S>
        void schedule(const S &s)
        {
            s_ = s;
        }

    private:
        friend class Property;

        template<class T2>
        friend Property<T2> alias(Property<T2> &p);

        inline static Ref<Instance> create() { return new Instance{}; }

        Instance():
            PropertyBinding(true)
        {}

        void value() const
        {
            preAccess();
        }

        void evaluate() override
        {
            f_();
        }

        void evaluateLater() override
        {
            if (s_) s_();
        }

        void disband() override
        {
            PropertyBinding::disband();
            f_ = std::function<void()>{};
        }

        std::function<void()> f_;
        std::function<void()> s_;
    };

    inline Instance *operator->() { return instance_; }
    inline const Instance *operator->() const { return instance_; }

    inline void operator()() const { instance_->value(); }

private:
    friend class Instance;

    Property(Instance *instance, bool): instance_(instance) {}

    Ref<Instance> instance_;
};

template<class T>
inline Property<T> alias(Property<T> &p) { return p->alias(); }

template<class T>
class PropertyMutator {
protected:
    static void store(Property<T> &property, const T &newValue) { property->store(newValue); }
};

class OnScopeExit {
public:
    OnScopeExit (const std::function<void()> &f): f_{f} {}
    ~OnScopeExit() { f_(); }
private:
    std::function<void()> f_;
};

} // namespace cc
