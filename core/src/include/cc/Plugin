#pragma once

#include <cc/Exception>

namespace cc {

class PluginLoadError: public Exception
{
public:
    ~PluginLoadError() throw() {}

    virtual String message() const override;
};

class Plugin: public Object
{
public:
    static Ref<Plugin> load(String path);

    String name() const { return name_; }
    String path() const { return path_; }

    void reload();
    void close();

private:
    Plugin(String path);

    Plugin *load();

    String path_;
    String name_;
    void *handle_;
};

} // namespace cc
