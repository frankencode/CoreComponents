#pragma once

#include <cc/Exception>

namespace cc {

class PluginLoadError: public Exception
{
public:
    string message() const override;
};

class Plugin: public Object
{
public:
    static Ref<Plugin> load(const string &path);

    string name() const { return name_; }
    string path() const { return path_; }

    void reload();
    void close();

private:
    Plugin(const string &path);

    Plugin *load();

    string path_;
    string name_;
    void *handle_;
};

} // namespace cc
