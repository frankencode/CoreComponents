#pragma once

#include <cc/Source>
#include <cc/PluginDir>
#include <cc/ListValue>

namespace cc {

template<class> class Singleton;

class PluginManager: public Object
{
public:
    static PluginManager *instance();
    ListValue< Ref<PluginDir> > pluginDirs() const { return pluginDirs_; }

private:
    friend class Singleton<PluginManager>;
    friend class PluginDir;

    PluginManager();
    ~PluginManager();

    void registerPluginDir(PluginDir *pluginDir);

    ListValue< Ref<PluginDir> > pluginDirs_;
};

} // namespace cc
