#pragma once

#include <cc/Stream>

namespace cc {

/** \class ReplaySource cc/ReplaySource
  * \ingroup streams
  * \brief Feed data from an in-memory buffer
  */
class ReplaySource: public Stream
{
public:
    /** Create a new ReplaySource for \a buffer
      */
    explicit ReplaySource(const Bytes &buffer);

private:
    struct State;
};

} // namespace cc
