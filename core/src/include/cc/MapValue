#pragma once

#include <initializer_list>
#include <cc/Map>
#include <cc/Format>

namespace cc {

/** \class MapValue cc/MapValue
  * \ingroup container_highlevel
  * \brief %Map data container
  * \tparam K key type
  * \tparam T mapped type
  * \see MultiMapValue, MultiSet
  */
template<class K, class T = K>
class MapValue {
public:
    typedef Map<K, T> Instance;

    typedef typename Instance::Item Item; ///< item type
    typedef typename Instance::Index Index; ///< index type
    typedef typename Instance::Key Key; ///< key type
    typedef typename Instance::Value Value; ///< mapped value type

    typedef typename Instance::Iterator Iterator; ///< iterator type
    typedef typename Instance::ConstIterator ConstIterator; ///< constant iterator type

    typedef Iterator iterator; ///< \internal
    typedef ConstIterator const_iterator; ///< \internal

    MapValue():
        instance_{new Instance}
    {}

    MapValue(std::initializer_list<KeyValue<K, T>> b):
        instance_{new Instance}
    {
        for (auto &x: b) instance_->insert(x->key(), x->value());
    }

    MapValue(const MapValue &b) = default;

    MapValue(MapValue &&b):
        instance_{std::move(b.instance_)}
    {}

    MapValue &operator=(const MapValue &b) = default;

    MapValue &operator=(MapValue &&b) {
        instance_ = std::move(b.instance_);
        return *this;
    }

    MapValue(Instance *b):
        instance_{b}
    {}

    Instance *operator->() { return Cow::get(instance_); }
    const Instance *operator->() const { return instance_; }

    operator const Instance *() const { return instance_; }
    operator Instance *() { return Cow::get(instance_); }

    const Item &operator[](Index i) const { return instance_->at(i); }

private:
    explicit operator bool() const;

    Ref<Instance> instance_;
};

template<class K, class T>
typename MapValue<K, T>::Index count(const MapValue<K, T> &a) { return a->count(); }

template<class K, class T>
typename MapValue<K, T>::ConstIterator begin(const MapValue<K, T> &a) { return a->begin(); }

template<class K, class T>
typename MapValue<K, T>::ConstIterator end(const MapValue<K, T> &a) { return a->end(); }

template<class K, class T>
typename MapValue<K, T>::Iterator begin(MapValue<K, T> &a) { return a->begin(); }

template<class K, class T>
typename MapValue<K, T>::Iterator end(MapValue<K, T> &a) { return a->end(); }

template<class K, class T>
bool operator==(const MapValue<K, T> &a, const MapValue<K, T> &b) { return container::compare(a, b) == 0; }

template<class K, class T>
bool operator!=(const MapValue<K, T> &a, const MapValue<K, T> &b) { return container::compare(a, b) != 0; }

template<class K, class T>
bool operator<(const MapValue<K, T> &a, const MapValue<K, T> &b) { return container::compare(a, b) < 0; }

template<class K, class T>
bool operator>(const MapValue<K, T> &a, const MapValue<K, T> &b) { return container::compare(a, b) > 0; }

template<class K, class T>
bool operator<=(const MapValue<K, T> &a, const MapValue<K, T> &b) { return container::compare(a, b) <= 0; }

template<class K, class T>
bool operator>=(const MapValue<K, T> &a, const MapValue<K, T> &b) { return container::compare(a, b) >= 0; }

template<class K, class T>
String str(const MapValue<K, T> &a)
{
    auto n = a->count();
    if (n == 0) return "[]";
    Format f;
    f << "[ ";
    for (const auto &x: a) {
        f << "(" << x->key() << ": " << x->value() << ")";
        if (--n > 0) f << ", ";
    }
    f << " ]";
    return f;
}

} // namespace cc
