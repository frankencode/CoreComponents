#pragma once

#include <cc/ui/TouchDevice>

namespace cc {
namespace ui {

class SdlTouchDevice: public TouchDevice
{
public:
    Id id() const override { return id_; }
    Finger getFinger(int index) const override;
    int getFingerCount() const override;

private:
    friend class Object;
    SdlTouchDevice(Id id): id_(id) {}
    Id id_;
};

}} // namespace cc::ui
