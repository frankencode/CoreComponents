#pragma once

#include <SDL2/SDL.h>
#include <cc/ui/types>

namespace cc {
namespace ui {

class SdlWindow;

class SdlContext: public Object
{
public:
    static Ref<SdlContext> create() { return new SdlContext; }

private:
    friend class SdlWindow;

    SdlContext();
    ~SdlContext();

    SDL_Texture *sdlTexture_;
    int sdlTextureWidth_ { 0 };
    int sdlTextureHeight_ { 0 };
};

}} // namespace cc::ui
