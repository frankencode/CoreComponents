#pragma once

#include <cc/ui/Application>
#include <cc/ui/Timer>

namespace cc::ui {

class SdlWindow;

class SdlApplication: public Application
{
public:
    SdlApplication();

    void triggerTimer(const Timer &timer);

private:
    friend class SdlWindow;

    struct State;

    void registerWindow(const SdlWindow &window);

    const State &me() const;
    State &me();
};

} // namespace cc::ui
