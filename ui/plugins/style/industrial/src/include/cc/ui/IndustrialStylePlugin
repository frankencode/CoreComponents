#pragma once

#include <cc/ui/StylePlugin>

namespace cc {
namespace ui {

class IndustrialStylePlugin: public StylePlugin
{
protected:
    friend class Object;

    IndustrialStylePlugin();
    void activate() override;

    Theme *dayTheme() const override;
    Theme *nightTheme() const override;

private:
    Ref<Theme> dayTheme_;
    Ref<Theme> nightTheme_;
};

}} // namespace cc::ui
