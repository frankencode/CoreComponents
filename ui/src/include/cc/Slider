#pragma once

#include <cc/InputControl>

namespace cc {

/** \class Slider cc/Slider
  * \ingroup ui
  * \brief %Slider control
  */
class Slider final: public InputControl
{
public:
    /** Create a primordial slider
      */
    Slider();

    /** Create a slider and return a copy of itself
      */
    explicit Slider(Out<Slider> self);

    double min() const; ///< Get the minimum slider value
    Slider &min(double newValue); ///< %Set the minimum slider value
    Slider &min(Definition<double> &&f); ///< Define the minimum slider value

    double max() const; ///< Get the maximum slider value
    Slider &max(double newValue); ///< %Set the maximum slider value
    Slider &max(Definition<double> &&f); ///< Define the maximum slider value

    double precision() const; ///< Get the precision
    Slider &precision(double newValue); ///< %Set the precision
    Slider &precision(Definition<double> &&f); ///< Define the precision

    double value() const; ///< Get the current slider value
    Slider &value(double newValue); ///< %Set the current slider value

private:
    struct State;

    State &me();
    const State &me() const;
};

} // namespace cc
