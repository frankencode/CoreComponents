#pragma once

#include <cc/Image>
#include <cc/Stream>

namespace cc {

/** \class ImageFile cc/ImageFile
  * \ingroup ui
  * \brief Read and write bitmap image files (BMP file format in ARGB pixel format)
  */
class ImageFile final: public Object
{
public:
    static void write(const Stream &stream, const Image &image);
    static void save(const String &path, const Image &image);
    // static Image load(const String &path);
};

} // namespace cc
