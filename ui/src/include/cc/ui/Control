#pragma once

#include <cc/ui/View>
#include <cc/ui/Cursor>

namespace cc {
namespace ui {

class Control: public View
{
public:
    Property< Ref<const Cursor> > cursor;

    Property<bool> focus;
    Property<bool> pressed;
    Property<bool> hover;

    bool gainTextInputFocus();

protected:
    Control(View *parent = 0);

    void updateCursorOnPointerMoved(const PointerEvent *event) const;

    bool feedFingerEvent(FingerEvent *event) override;
    bool feedMouseEvent(MouseEvent *event) override;
};

}} // namespace cc::ui
