#pragma once

#include <cc/ui/Painter>

typedef struct _cairo_surface cairo_surface_t;

namespace cc {
namespace ui {

class Painter;

class Surface: public virtual Object
{
public:
    bool isValid() const;

    void nextPage(bool clear = true);

protected:
    friend class Painter;
    virtual cairo_surface_t *cairoSurface() const = 0;
};

}} // namespace cc::ui
