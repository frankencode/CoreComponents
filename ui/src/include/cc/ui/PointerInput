#pragma once

#include <cc/ui/types>

namespace cc {
namespace ui {

class View;
class TouchEvent;
class MouseEvent;

/** Mix-in for adding support for mouse and single-touch input to a View.
  */
class PointerInput
{
public:
    Property<Point> mousePos;
    Property<MouseButton> mouseButton;

    Signal pressed;
    Signal released;
    Signal hovered;
    Signal clicked;

protected:
    friend class View;

    PointerInput(View *view);

private:
    void feed(const TouchEvent *event);
    void feed(const MouseEvent *event);

    View *view_;
};

}} // namespace cc::ui
