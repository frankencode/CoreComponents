#pragma once

#include <cc/ui/TypeSetter>
#include <cc/ui/FtGlyphRun>

namespace cc {
namespace ui {

class FtTypeSetter: public TypeSetter
{
public:
    static Ref<FtTypeSetter> create() { return new FtTypeSetter; }

    Ref<GlyphRun> layout(String text, const Font &font) override {
        return ftLayout(text, font);
    }

    Ref<FtGlyphRun> ftLayout(String text, const Font &font);

    Point advance() const override { return pos_; }  // FIXME: rename to "pos"

    Ref<TypeSetter> copy() const override;

private:
    FtTypeSetter() {}

    Ref<TextRun> createTextRun() override;

    Point pos_;
};

}} // namespace cc::ui
