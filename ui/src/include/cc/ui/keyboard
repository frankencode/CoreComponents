inline int32_t operator+(ScanCode scanCode) { return static_cast<int32_t>(scanCode); }

String str(ScanCode scanCode);

#define CCUI_SCANCODE_TO_KEYCODE(scanCode) static_cast<KeyCode>(static_cast<int32_t>(scanCode) | (1 << 30))

