    Key_Calculator           = CCUI_SCANCODE_TO_KEYCODE(ScanCode::Key_Calculator),
    Key_Computer             = CCUI_SCANCODE_TO_KEYCODE(ScanCode::Key_Computer),
    Key_AppSearch            = CCUI_SCANCODE_TO_KEYCODE(ScanCode::Key_AppSearch),
    Key_AppHome              = CCUI_SCANCODE_TO_KEYCODE(ScanCode::Key_AppHome),
    Key_AppBack              = CCUI_SCANCODE_TO_KEYCODE(ScanCode::Key_AppBack),
    Key_AppForward           = CCUI_SCANCODE_TO_KEYCODE(ScanCode::Key_AppForward),
    Key_AppStop              = CCUI_SCANCODE_TO_KEYCODE(ScanCode::Key_AppStop),
    Key_AppRefresh           = CCUI_SCANCODE_TO_KEYCODE(ScanCode::Key_AppRefresh),
    Key_AppBookmarks         = CCUI_SCANCODE_TO_KEYCODE(ScanCode::Key_AppBookmarks),
    Key_BrightnessDown       = CCUI_SCANCODE_TO_KEYCODE(ScanCode::Key_BrightnessDown),
    Key_BrightnessUp         = CCUI_SCANCODE_TO_KEYCODE(ScanCode::Key_BrightnessUp),
    Key_DisplaySwitch        = CCUI_SCANCODE_TO_KEYCODE(ScanCode::Key_DisplaySwitch),
    Key_KeyboardLightToggle  = CCUI_SCANCODE_TO_KEYCODE(ScanCode::Key_KeyboardLightToggle),
    Key_KeyboardLightDown    = CCUI_SCANCODE_TO_KEYCODE(ScanCode::Key_KeyboardLightDown),
    Key_KeyboardLightUp      = CCUI_SCANCODE_TO_KEYCODE(ScanCode::Key_KeyboardLightUp),
    Key_Eject                = CCUI_SCANCODE_TO_KEYCODE(ScanCode::Key_Eject),
    Key_Sleep                = CCUI_SCANCODE_TO_KEYCODE(ScanCode::Key_Sleep),
    Key_App1                 = CCUI_SCANCODE_TO_KEYCODE(ScanCode::Key_App1),
    Key_App2                 = CCUI_SCANCODE_TO_KEYCODE(ScanCode::Key_App2),
    Key_AudioRewind          = CCUI_SCANCODE_TO_KEYCODE(ScanCode::Key_AudioRewind),
    Key_AudioFastForward     = CCUI_SCANCODE_TO_KEYCODE(ScanCode::Key_AudioFastForward)
};

inline int32_t operator+(KeyCode keyCode) { return static_cast<int32_t>(keyCode); }

String str(KeyCode keyCode);

enum class KeyModifier: int32_t
{
    None         = 0x0000,
    LeftShift    = 0x0001,
    RightShift   = 0x0002,
    LeftControl  = 0x0040,
    RightControl = 0x0080,
    LeftAlt      = 0x0100,
    RightAlt     = 0x0200,
    LeftMeta     = 0x0400,
    RightMeta    = 0x0800,
    NumLock      = 0x1000,
    CapsLock     = 0x2000,
    ModeLock     = 0x4000
};

CC_BITMASK(KeyModifier, int32_t);

String str(KeyModifier modifiers);

}} // namespace cc::ui
