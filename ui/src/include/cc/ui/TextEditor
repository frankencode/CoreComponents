#pragma once

#include <cc/String>
#include <cc/Range>

namespace cc {
namespace ui {

class TextEditor: public virtual Object
{
public:
    virtual int charCount() const = 0;
    virtual String copy(Range range) const = 0;

    virtual String text() const = 0;
    virtual Range paste(Range range, const String &newChunk) = 0;

    virtual bool canUndo() const = 0;
    virtual bool canRedo() const = 0;
    virtual Range undo() = 0;
    virtual Range redo() = 0;
};

}} // namespace cc::ui
