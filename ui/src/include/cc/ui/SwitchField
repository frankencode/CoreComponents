#pragma once

#include <cc/ui/View>

namespace cc::ui {

/** \class SwitchField cc/ui/SwitchField
  * \ingroup ui
  * \brief On-off switch with associated label
  */
class SwitchField final: public View
{
public:
    /** Create primordial switch field
      */
    SwitchField();

    /** Create a new switch field
      */
    explicit SwitchField(Out<SwitchField> self);

    String text() const; ///< Get text
    SwitchField &text(const String &newValue); ///< %Set text
    SwitchField &text(Definition<String> &&f); ///< Define text

    bool value() const; ///< Get current state
    SwitchField &value(bool newValue); ///< %Set current state
    SwitchField &value(Definition<bool> &&f); ///< Define current state

private:
    struct State;

    State &me();
    const State &me() const;
};

} // namespace cc::ui
