#pragma once

#include <cc/ui/types>

namespace cc {
namespace ui {

class WheelEvent: public Object
{
public:
    double time() const { return time_; }
    Step wheelStep() const { return wheelStep_; }
    Pos mousePos() const { return mousePos_; }

    String toString() const;

private:
    friend class Object;

    WheelEvent(
        double time,
        const Step &wheelStep,
        const Pos &mousePos
    ):
        time_(time),
        wheelStep_(wheelStep),
        mousePos_(mousePos)
    {}

    double time_;
    Step wheelStep_;
    Pos mousePos_;
};

}} // namespace cc::ui
