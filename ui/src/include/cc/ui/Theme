#pragma once

#include <cc/ui/types>

namespace cc {
namespace ui {

class Theme: public Object
{
public:
    Property<Color> primaryColor;
    Property<Color> accentColor;
    Property<Color> alertColor;

    Property<Color> statusBarColor;
    Property<Color> appBarColor;
    Property<Color> backgroundColor;
    Property<Color> dialogBackgroundColor;
};

}} // namespace cc::ui
