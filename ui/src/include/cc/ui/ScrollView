#pragma once

#include <cc/ui/Flickable>
#include <cc/ui/ScrollBar>

namespace cc::ui {

/** \class ScrollView cc/ui/ScrollView
  * \ingroup ui
  * \brief Scrollable view
  */
class ScrollView: public View
{
public:
    /** Create a primordial scroll view
      */
    ScrollView():
        View{onDemand<State>}
    {}

    /** Create a new scroll view
      */
    explicit ScrollView(Out<ScrollView> self):
        View{new State}
    {
        self = *this;
    }

    /** Create a new scroll view of size (\a width, \a height)
      */
    ScrollView(double width, double height, Out<ScrollView> self = None{}):
        View{new State}
    {
        size(Size{width, height});
        self = *this;
    }

    /** Create a new scroll view with custom \a pane
      */
    explicit ScrollView(const View &pane, Out<ScrollView> self = None{}):
        View{new State{pane}}
    {
        self = *this;
    }

    /** Get the pane
      */
    View pane() const { return me().flickable_.pane(); }

    /** Get scroll bar auto hide mode
      */
    bool scrollBarAutoHide() const { return me().scrollBarAutoHide(); }

    /** %Set scroll bar auto hide mode
      */
    ScrollView &scrollBarAutoHide(bool newValue) { me().scrollBarAutoHide(newValue); return *this; }

protected:
    struct State: public View::State
    {
        State(const View &pane = Pane{});

        Property<bool> scrollBarAutoHide { true };
        Property<void> scrollMonitor;
        Property<void> carrierMonitor;

        Flickable flickable_;
        ScrollBar vScroll_;
        ScrollBar hScroll_;
    };

    State &me() { return View::me().as<State>(); }
    const State &me() const { return View::me().as<State>(); }
};

} // namespace cc::ui
