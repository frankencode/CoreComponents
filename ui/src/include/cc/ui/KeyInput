#pragma once

#include <cc/ui/types>
#include <cc/ui/Key>

namespace cc {
namespace ui {

class View;
class KeyEvent;

/** Mix-in for adding keyboard input to a View.
  */
class KeyInput
{
public:
    Property<Key> key;

    Signal keyPressed;
    Signal keyReleased;

protected:
    friend class View;

    KeyInput(View *view);

private:
    void feed(const KeyEvent *event);

    View *view_;
};

}} // namespace cc::ui
