#pragma once

#include <cc/ui/Visual>
#include <cc/ui/Font>

namespace cc {
namespace ui {

class GlyphVisual: public Visual
{
    friend class Object;

public:
    Property<Font> font;
    Property<Color> ink { Color::Black };

    static Ref<GlyphVisual> create(uchar_t ch) {
        return Object::create<GlyphVisual>(ch);
    }

    void paint(Painter &p) override;

private:
    GlyphVisual(uchar_t ch);

    Property< Ref<GlyphRun> > glyphRun_;
    Property<Size> preferredSize_;

    String s_;
};

}} // namespace cc::ui
