#pragma once

#include <cc/Property>
#include <cc/SpinLock>
#include <cc/ui/Font>

namespace cc {
namespace ui {

class StyleManager;

class StylePlugin: public Object
{
public:
    static StylePlugin *instance();

    inline String name() const { return name_; }

    Property<Font> defaultFont;
    Property<Font> defaultFixedFont;
    Property<Size> defaultMargin;

    Property<String> defaultFontFamily;
    Property<double> defaultFontSize;

protected:
    friend class StyleManager;
    friend class Object;

    StylePlugin(String name);

    Property<Font> defaultFontUnscaled;
    Property<Font> defaultFixedFontUnscaled;
    Property<Size> defaultMarginUnscaled;

    virtual void activate() = 0;

private:
    void init();

    String name_;
};

}} // namespace cc::ui
