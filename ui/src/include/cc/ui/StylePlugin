#pragma once

#include <cc/Property>
#include <cc/SpinLock>
#include <cc/ui/TextStyle>

namespace cc {
namespace ui {

class StyleManager;

class StylePlugin: public Object
{
public:
    Property< Ref<const TextStyle> > defaultTextStyle;

    static StylePlugin *instance();

    inline String name() const { return name_; }

    virtual Size textMargin() const;

protected:
    friend class StyleManager;
    friend class Object;

    StylePlugin(String name);

    virtual void activate() = 0;

private:
    void init();

    String name_;
};

}} // namespace cc::ui
