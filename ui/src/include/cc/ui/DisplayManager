#pragma once

#include <cc/ui/Display>

namespace cc { template<class, class> class Map; }

namespace cc {
namespace ui {

class DisplayManager: public Object
{
public:
    static DisplayManager *instance();

    virtual Ref<Display> getDisplay(int index) const = 0;
    virtual int getDisplayCount() const = 0;

    double displayDensityRatio() const { return displayDensityRatio_; }
    TextSmoothing defaultTextSmoothing() const { return defaultTextSmoothing_; }

protected:
    double displayDensityRatio_ { 1 };
    TextSmoothing defaultTextSmoothing_ { TextSmoothing::Grayscale };
};

}} // namespace cc::ui
