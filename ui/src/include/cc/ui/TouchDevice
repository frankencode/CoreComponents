#pragma once

#include <cc/ui/Finger>

namespace cc {
namespace ui {

class TouchDevice: public Object
{
public:
    typedef int64_t Id;

    virtual Id id() const = 0;
    virtual Finger getFinger(int index) const = 0;
    virtual int getFingerCount() const = 0;
};

}} // namespace cc::ui
