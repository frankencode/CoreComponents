#pragma once

#include <cc/ui/View>

namespace cc {
namespace ui {

class Column: public View
{
public:
    Property<BoxAlign> align { BoxAlign::Left };
    Property<double> spacing { 0 };
    Property<double> indent { 0 };

    static Ref<Column> create(View *parent);

protected:
    friend class Object;

    Column(View *parent);

    void childReady(View *child) override;
    void childDone(View *child) override;

    void updateLayout();
};

}} // namespace cc::ui
