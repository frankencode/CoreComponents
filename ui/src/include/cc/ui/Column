#pragma once

#include <cc/ui/View>

namespace cc {
namespace ui {

class Column: public View
{
public:
    static Ref<Column> create(View *parent = 0);

    Property<ColumnAlign> align { ColumnAlign::Left };
    Property<Size> margin;
    Property<double> spacing { 0 };
    Property<double> indent { 0 };

protected:
    Column(View *parent = 0);

    void childReady(View *child) override;
    void childDone(View *child) override;

    void updateLayout();
};

}} // namespace cc::ui
