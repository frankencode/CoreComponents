#pragma once

#include <cc/ui/View>
#include <cc/ui/Visual>

namespace cc {
namespace ui {

class SingleLineItemDelegate: public View
{
    friend class Object;

public:
    Property< Ref<Visual> > icon;
    Property<String> text;

private:
    SingleLineItemDelegate(View *parent, const String &text = String{}, Visual *icon = nullptr);
    void init();
};

}} // namespace cc::ui
