#pragma once

#include <cc/ui/View>
#include <cc/ui/Font>

namespace cc {
namespace ui {

class TextRun;

class TextLine: public View
{
    friend class Object;

public:
    static TextLine *create(View *parent, const String &text = String{}, const Font &font = Font{});

    Property<String> text;
    Property<Font> font;
    Property<Color> ink;
    Property<Size> margin;

protected:
    Property< Ref<const TextRun> > textRun;

    TextLine(View *parent, const String &text, const Font &font_ = Font{});
    ~TextLine();

    void paint() override;
};

}} // namespace cc::ui
