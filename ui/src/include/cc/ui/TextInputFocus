#pragma once

#include <cc/ui/types>

namespace cc {
namespace ui {

class Control;

class TextInputFocus: public Object
{
public:
    static const TextInputFocus *create(Control *target = 0);

    bool isValid() const;
    Control *target() const;

private:
    TextInputFocus(Control *target);
    ~TextInputFocus();

    Control *target_;
};

}} // namespace cc::ui
