#pragma once

#include <cc/ui/types>

namespace cc {
namespace ui {

class View;
class Control;

class TextInputFocus: public Object
{
public:
    static Ref<TextInputFocus> create(View *target = 0);

    bool isValid() const;
    View *target() const;

private:
    TextInputFocus(View *target);
    ~TextInputFocus();

    View *target_;
};

}} // namespace cc::ui
