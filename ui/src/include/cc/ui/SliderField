#pragma once

#include <cc/ui/Control>

namespace cc::ui {

/** \class SliderField cc/ui/SliderField
  * \ingroup ui
  * \brief %Slider with leading and trailing decoration
  */
class SliderField final: public View
{
public:
    /** Create a primordial slider field
      */
    SliderField();

    /** Create a new slider field and return itself
      */
    explicit SliderField(Out<SliderField> self);

    SliderField &leading(const View &view); ///< %Set leading decoration
    SliderField &trailing(const View &view); ///< %Set trailing decoration

    double min() const; ///< Get minimum slider value
    SliderField &min(double newValue); ///< %Set minimum slider value
    SliderField &min(Definition<double> &&f); ///< Define minimum slider value

    double max() const; ///< Get maximum slider value
    SliderField &max(double newValue); ///< %Set maximum slider value
    SliderField &max(Definition<double> &&f); ///< Define maximum slider value

    double precision() const; ///< Get precision
    SliderField &precision(double newValue); ///< %Set precision
    SliderField &precision(Definition<double> &&f); ///< Define precision

    double value() const; ///< Get current slider value
    SliderField &value(double newValue); ///< %Set current slider value

private:
    struct State;

    State &me();
    const State &me() const;
};

} // namespace cc::ui
