#pragma once

#include <cc/ui/Control>

namespace cc {
namespace ui {

class InputControl: public Control
{
public:
    class Instance: public Control::Instance
    {
    public:
        virtual String text() const = 0;
        virtual Point textPos() const = 0;

        Signal accepted;
        Signal rejected;
        Signal gotoNext;
        Signal gotoPrevious;

    protected:
        friend class InputControl;

        bool onKeyPressed(const KeyEvent *event) override;
    };

    InputControl(Instance *instance):
        Control{instance}
    {}

    Instance *operator->() const { return my<Instance>(); }
};

}} // namespace cc::ui
