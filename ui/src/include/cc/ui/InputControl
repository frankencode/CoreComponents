#pragma once

#include <cc/ui/Control>

namespace cc {
namespace ui {

class InputControl: public Control
{
public:
    virtual String text() const = 0;
    virtual Point textPos() const = 0;

    Notifier accepted;
    Notifier rejected;

protected:
    InputControl(View *parent):
        Control{parent}
    {}
};

}} // namespace cc::ui
