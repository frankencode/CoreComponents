#pragma once

#include <cc/ui/types>

namespace cc {
namespace ui {

class TouchEvent: public Object
{
public:
    PointerAction action() const { return action_; }
    double time() const { return time_; }
    TouchDeviceId deviceId() const { return deviceId_; }
    TouchFingerId fingerId() const { return fingerId_; }
    Pos pos() const { return pos_; }
    Step step() const { return step_; }
    double pressure() const { return pressure_; }

    String toString() const;

protected:
    friend class Object;

    TouchEvent(
        PointerAction action,
        double time,
        TouchDeviceId deviceId,
        TouchFingerId fingerId,
        const Pos &pos,
        const Step &step,
        double pressure
    ):
        action_(action),
        time_(time),
        deviceId_(deviceId),
        fingerId_(fingerId),
        pos_(pos),
        step_(step),
        pressure_(pressure)
    {}

    PointerAction action_;
    double time_;
    TouchDeviceId deviceId_;
    TouchFingerId fingerId_;
    Pos pos_;
    Step step_;
    double pressure_;
};

}} // namespace cc::ui
