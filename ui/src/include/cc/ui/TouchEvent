#pragma once

namespace cc {
namespace ui {

enum class TouchFingerAction {
    Motion,
    Contact,
    Release
};

class TouchEvent: public Object
{
public:
    TouchFingerAction action() const { return action_; }
    double time() const { return time_; }
    TouchDeviceId deviceId() const { return deviceId_; }
    TouchFingerId fingerId() const { return fingerId_; }
    Point pos() const { return pos_; }
    Step step() const { return step_; }
    double pressure() const { return pressure_; }

protected:
    friend class Object;

    TouchEvent(
        TouchFingerAction action,
        double time,
        TouchDeviceId deviceId,
        TouchFingerId fingerId,
        Point pos,
        Step step,
        double pressure
    ):
        action_(action),
        time_(time),
        deviceId_(deviceId),
        fingerId_(fingerId),
        pos_(pos),
        step_(step),
        pressure_(pressure)
    {}

    TouchFingerAction action_;
    double time_;
    TouchDeviceId deviceId_;
    TouchFingerId fingerId_;
    Point pos_;
    Step step_;
    double pressure_;
};

}} // namespace cc::ui
