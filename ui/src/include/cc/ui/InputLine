#pragma once

#include <cc/ui/View>

namespace cc {
namespace ui {

class InputLine: public View
{
public:
    class Instance: public View::Instance {
    public:
        Property<double> thickness { dp(1) };
        Property<Color> ink { Color { 0x000000 } };

    protected:
        friend class InputLine;

        Instance(double maxThickness);
    };

    InputLine(double maxThickness = dp(1)):
        View{new Instance{maxThickness}}
    {}

    Instance *operator->() const { return my<Instance>(); }
};

}} // namespace cc::ui
