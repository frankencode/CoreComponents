#pragma once

#include <cc/ui/Item>

namespace cc {
namespace ui {

class TextItem: public Item
{
    friend class Object;

public:
    Property<String> text;

private:
    TextItem(const String &initialText = String{}):
        text{initialText}
    {}
};

}} // namespace cc::ui
