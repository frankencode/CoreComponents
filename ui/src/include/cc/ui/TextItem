#pragma once

#include <cc/Property>
#include <cc/ui/Item>

namespace cc {
namespace ui {

class TextItem: public Item
{
    friend class Object;

public:
    Property<string> text;

private:
    TextItem(const string &initialText = string{}):
        text{initialText}
    {}
};

}} // namespace cc::ui
