#pragma once

#include <cc/ui/InputControl>

namespace cc {
namespace ui {

class InputField: public Control
{
public:
    class Instance: public Control::Instance
    {
    public:
        Property<String> labelText;
        Property<String> inputText;
        Property<String> dummyText;
        Property<String> helpText;
        Property<String> statusText;
        Property<String> errorText;

        Signal accepted;
        Signal rejected;

        Size preferredSize() const override;
        Size minSize() const override;
        Size maxSize() const override;

    protected:
        friend class InputField;

        Instance(const String &labelText);

        virtual InputControl createInputControl() = 0;

        void clear() override;

    private:
        void gotoNext();
        void gotoPrevious();

        InputControl input_ { nullptr };
    };

    InputField(Instance *instance):
        Control{instance}
    {}

    Instance *operator->() const { return my<Instance>(); }
};

}} // namespace cc::ui
