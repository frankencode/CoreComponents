#pragma once

#include <cc/ui/View>

namespace cc {
namespace ui {

class Row: public View
{
public:
    Property<RowAlign> align { RowAlign::Center };
    Property<Size> margin;
    Property<double> spacing { 0 };

    static Ref<Row> create(View *parent);

protected:
    Row(View *parent);

    void childReady(View *child) override;
    void childDone(View *child) override;

    void updateLayout();
};

}} // namespace cc::ui
