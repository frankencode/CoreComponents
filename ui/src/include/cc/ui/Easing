#pragma once

#include <cc/ui/Transition>

namespace cc {
namespace ui {

class Easing
{
public:
    template<class T>
    Easing(Property<T> &property, double duration, const typename Transition<T>::Easing &easing = easing::linear)
    {
        Transition<T>::setup(property, duration, easing);
    }
};

}} // namespace cc::ui
