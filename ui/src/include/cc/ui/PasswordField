#pragma once

#include <cc/ui/InputField>

namespace cc {
namespace ui {

class PasswordInput;

class PasswordField: public InputField
{
    class Instance: public InputField::Instance
    {
    public:
        String password() const;

    private:
        friend class PasswordField;

        Instance(const String &labelText, const String &bullet = "•");

        InputControl createInputControl() override;

        std::function<String()> getPassword_;
        String bullet_;
    };

    PasswordField(const String &labelText, const String &bullet = "•"):
        InputField{new Instance{labelText, bullet}}
    {}

    Instance *operator->() const { return my<Instance>(); }
};

}} // namespace cc::ui
