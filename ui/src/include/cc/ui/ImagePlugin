#pragma once

#include <cc/string>

namespace cc {
namespace ui {

class Image;

class ImagePlugin: public Object
{
public:
    string name() const { return name_; }

    virtual Ref<Image> load(const string &path, unsigned index = 0) const = 0;

protected:
    ImagePlugin(const string &name);

    void init();

    string name_;
};

}} // namespace cc::ui
