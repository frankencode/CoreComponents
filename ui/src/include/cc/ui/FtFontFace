#pragma once

#include <cc/ui/FontFace>
#include <cc/ui/FtLibrary>
#include <ft2build.h>
#include FT_FREETYPE_H
#include FT_GLYPH_H
#include FT_TRUETYPE_TABLES_H

namespace cc::ui {

/** \internal
  */
class FtFontFace: public FontFace
{
public:
    FtFontFace(const String &path);

    FT_Face ftFace() const;

private:
    friend class Object;

    struct State: public FontFace::State
    {
        State(const String &path);
        ~State();

        FtLibrary ftLibrary_;
        FT_Face face_ { nullptr };
    };

    FtFontFace() = default;

    const State &me() const;
};

} // namespace cc::ui
