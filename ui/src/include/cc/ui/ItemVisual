#pragma once

#include <cc/ui/Visual>

namespace cc {
namespace ui {

class Item;
class ItemLayout;

class ItemVisual: public Visual, public IndexTracking
{
public:
    Signal changed;

    Item *item() const { return item_; }
    const ItemLayout *layout() const { return layout_; }

protected:
    friend class ItemLayout;

    ItemVisual(Item *item, const ItemLayout *layout);

    virtual void update() = 0;

private:
    Item *item_;
    const ItemLayout *layout_;
};

}} // namespace cc::ui
