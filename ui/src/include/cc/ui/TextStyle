#pragma once

#include <cc/ui/ScaledFont>

namespace cc {
namespace ui {

class TextStyle: public Object
{
public:
    static Ref<TextStyle> create(const ScaledFont *font, Color color = Color{});
    static Ref<TextStyle> create(const ScaledFont *font, Decoration decoration, Color color = Color{});

    const ScaledFont *font() const { return font_; }
    Color color() const { return color_; }
    Decoration decoration() const { return decoration_; }

    Ref<TextStyle> copy() const;

    String toString() const;

private:
    TextStyle(const ScaledFont *font, Color color, Decoration decoration):
        font_(font),
        color_(color),
        decoration_(decoration)
    {}

    Ref<const ScaledFont> font_;
    Color color_;
    Decoration decoration_;
};

}} // namespace cc::ui
