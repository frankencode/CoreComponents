#pragma once

#include <cc/ui/Font>

namespace cc {
namespace ui {

class TextStyle: public Object
{
public:
    static Ref<TextStyle> create(const Font *font, Color color = Color{})
    {
        return new TextStyle(font, color);
    }

    const Font *font() const { return font_; }
    Color color() const { return color_; }

private:
    TextStyle(const Font *font, Color color):
        font_(font),
        color_(color)
    {}

    Ref<const Font> font_;
    Color color_;
};

}} // namespace cc::ui
