#pragma once

#include <cc/ui/InputField>

namespace cc {
namespace ui {

class TextInput;

class TextField: public InputField
{
public:
    class Instance: public InputField::Instance
    {
    protected:
        friend class TextField;

        Instance(const String &labelText);

        InputControl createInputControl() override;
    };

    TextField(const String &labelText):
        InputField{new Instance{labelText}}
    {}

    Instance *operator->() const { return my<Instance>(); }
};

}} // namespace cc::ui
