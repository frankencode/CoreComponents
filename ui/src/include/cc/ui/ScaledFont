#pragma once

#include <cc/ui/types>
#include <cc/ui/FontMetrics>

namespace cc {
namespace ui {

class Font;

class ScaledFont: public Object
{
public:
    virtual Font font() const = 0;

    virtual const FontMetrics *metrics() const = 0;

    virtual String toString() const;
};

}} // namespace cc::ui
