#include <cc/ui/TextInputState>
#include <cc/ui/PasswordEditor>

namespace cc::ui {

struct PasswordInput::State: public TextInput::State
{
    State():
        TextInput::State{PasswordEditor{style().passwordBullet()}}
    {
        font([=]{ return style().defaultFixedFont(); });
    }
};

} // namespace cc::ui
