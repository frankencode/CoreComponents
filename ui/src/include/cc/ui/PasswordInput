#pragma once

#include <cc/ui/TextInput>

namespace cc::ui {

/** \class PasswordInput cc/ui/PasswordInput
  * \ingroup ui
  * \brief %Password input control
  */
class PasswordInput final: public TextInput
{
public:
    /** Create a primordial password input control
      */
    PasswordInput();

    /** Get the password entered by the user
      */
    String password() const;

private:
    friend class Object;

    struct State;
};

} // namespace cc::ui
