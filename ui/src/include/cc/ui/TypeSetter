#pragma once

#include <cc/ui/GlyphRun>

namespace cc {
namespace ui {

class TextRun;

class TypeSetter: public Object
{
public:
    static Ref<TypeSetter> create();

    virtual Ref<GlyphRun> layout(String text, const Font &font) = 0;
    virtual Point advance() const = 0; // FIXME: rename to "fin"

    virtual Ref<TypeSetter> copy() const = 0;

private:
    friend class TextRun;

    virtual Ref<TextRun> createTextRun() = 0;
};

}} // namespace cc::ui
