#pragma once

#include <cc/ui/Control>

namespace cc {
namespace ui {

class TextRun;
class TextCursor;
class Timer;

class TextInput: public Control
{
    friend class Object;

public:
    Property<String> text;
    Property<Font> font;
    Property<Color> ink;
    Property<Size> margin;

    Point textPos() const;

protected:
    TextInput(View *parent = 0);
    ~TextInput();

private:
    Property< Ref<const TextRun> > textRun;

    bool onPointerClicked(const PointerEvent *event) override;
    void paint() override;

    Ref<TextRun> textRun_;
    Ref<TextCursor> textCursor_;
    Ref<Timer> timer_;
};

}} // namespace cc::ui
