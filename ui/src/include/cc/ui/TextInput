#pragma once

#include <cc/ui/Control>

namespace cc {
namespace ui {

class TextRun;
class TextCursor;
class Timer;

class TextInput: public Control
{
    friend class Object;

public:
    static Ref<TextInput> create(View *parent = 0);

    Property<String> text;
    Property<Font> font;

private:
    TextInput(View *parent = 0);

    void paint() override;

    Ref<TextRun> textRun_;
    Ref<TextCursor> textCursor_;
    Ref<Timer> timer_;
};

}} // namespace cc::ui
