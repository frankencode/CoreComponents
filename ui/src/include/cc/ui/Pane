#pragma once

#include <cc/ui/View>

namespace cc::ui {

/** \class Pane cc/ui/Pane
  * \ingroup ui
  * \brief A view contained in another view, e.g. inside a Flickable
  */
class Pane: public View
{
public:
    /** Create a primordial pane
      */
    Pane():
        View{onDemand<State>}
    {}

    /** Create a new pane
      */
    explicit Pane(Out<Pane> self):
        View{new State}
    {
        self = *this;
    }

    /** Create a new pane of size (\a width, \a height)
      */
    Pane(double width, double height):
        View{new State}
    {
        size({width, height});
    }

protected:
    friend class Object;

    struct State: public View::State
    {
        State() = default;

        Size preferredSize() const override;
    };
};

} // namespace cc::ui
