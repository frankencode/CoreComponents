#pragma once

#include <cc/ui/View>
#include <cc/ui/Font>

namespace cc {
namespace ui {

class TextRun;

class Label: public View
{
    friend class Object;

public:
    Property<String> text;
    Property<Point> textPos;
    Property<Font> font;
    Property<Color> ink;
    Property<Size> margin;

protected:
    Label(View *parent, const String &text = String{}, const Font &font = Font{});
    ~Label();

private:
    void paint() final;

    Property< Ref<const TextRun> > textRun;
};

}} // namespace cc::ui
