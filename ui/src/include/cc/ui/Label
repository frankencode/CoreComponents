#pragma once

#include <cc/ui/View>
#include <cc/ui/Font>

namespace cc {
namespace ui {

class TextRun;

class Label: public View
{
    friend class Object;

public:
    static Ref<Label> create(View *parent, String text, const Font &font = Font());

    Property<String> text;
    Property<Font> font;
    Property<Size> margin;

protected:
    Label(View *parent, String text, const Font &font);

    void updateLayout();
    bool updateSize();

    void paint() override;

    Ref<TextRun> textRun_;
};

}} // namespace cc::ui
