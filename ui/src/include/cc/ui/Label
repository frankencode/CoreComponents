#pragma once

#include <cc/ui/View>
#include <cc/ui/TextStyle>

namespace cc {
namespace ui {

class TextRun;

class Label: public View
{
public:
    Property<String> text;
    Property< Ref<const TextStyle> > textStyle;
    Property<Size> margin;

    static Ref<Label> create(View *parent, String text, const TextStyle *textStyle = 0);

protected:
    Label(View *parent, String text, const TextStyle *textStyle);

    void updateLayout();
    void updateSize();

    void paint() override;

    Ref<TextRun> textRun_;
};

}} // namespace cc::ui
