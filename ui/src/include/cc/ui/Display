#pragma once

#include <cc/ui/types>

namespace cc {
namespace ui {

class Display: public Object
{
public:
    Point pos() const { return pos_; }
    Size size() const { return size_; }
    Ratio dpi() const { return dpi_; }

    Size getSizeInCm() const;
    double getDiagonalInInch() const;

protected:
    Point pos_;
    Size size_;
    Ratio dpi_;
};

}} // namespace cc::ui
