#pragma once

#include <cc/ui/types>

namespace cc {
namespace ui {

class Display: public Object
{
public:
    Property<Point> pos;
    Property<Size> size;
    Property<Ratio> dpi;

    Property<Ratio> dpcm { [=]{ return dpi() / 2.54; } };
    Property<double> diagonal { [=]{ return (size() / dpi())->magnitude(); } };
    Property<bool> isHandheld { [=]{ return diagonal() < 11; } };

protected:
    friend class Object;
    Display() = default;
    ~Display() = default;
};

}} // namespace cc::ui
