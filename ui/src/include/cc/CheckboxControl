#pragma once

#include <cc/InputControl>

namespace cc {

/** \class CheckboxControl cc/SwitchControl
  * \ingroup ui
  * \brief %CheckboxControl
  */
class CheckboxControl final: public InputControl
{
public:
    /** Create a primordial checkbox
      */
    CheckboxControl();

    /** Create a new switch and return weak reference of itself
      */
    explicit CheckboxControl(Out<CheckboxControl> self);

    bool value() const; ///< Get current state
    CheckboxControl &value(bool newValue); ///< %Set current state
    CheckboxControl &value(Definition<bool> &&f); ///< Define current state

private:
    struct State;

    State &me();
    const State &me() const;
};

} // namespace cc
