#pragma once

#include <cc/LineEdit>

namespace cc {

/** \class PasswordEdit cc/PasswordEdit
  * \ingroup ui
  * \brief %Password input field
  */
class PasswordEdit final: public LineEdit
{
public:
    /** Create a primordial password input field
      */
    PasswordEdit() = default;

    /** Create a new password input field
      * \param label %Label text
      * \param self Reference to newly created object
      */
    explicit PasswordEdit(const String &label, Out<PasswordEdit> self = None{});

    /** Get the password entered by the user
      */
    String password() const;
};

} // namespace cc
