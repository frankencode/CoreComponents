#pragma once

#include <cc/InputControl>

namespace cc {

/** \class Switch cc/Switch
  * \ingroup ui
  * \brief On/off switch
  */
class Switch final: public InputControl
{
public:
    /** Create a primordial on/off switch
      */
    Switch();

    /** Create a new switch and return it in \a self
      */
    explicit Switch(Out<Switch> self);

    bool value() const; ///< Get current state
    Switch &value(bool newValue); ///< %Set current state
    Switch &value(Definition<bool> &&f); ///< Define current state

private:
    struct State;

    State &me();
    const State &me() const;
};

} // namespace cc
