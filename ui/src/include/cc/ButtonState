#include <cc/Button>
#include <cc/Label>
#include <cc/Box>

namespace cc {

struct Button::State: public InputControl::State
{
    State();

    void setIcon(View view);

    void setText(const String &newValue);
    void defineText(const String &newValue);
    void defineText(Definition<String> &&f);

    Size preferredSize() const override;
    Size minSize() const override;
    Size maxSize() const override;

    Property<View> icon;
    Property<Label> label;
    Property<double> radius;
    Property<double> preferredHeight;
    Property<double> leadingSpacing;
    Property<double> trailingSpacing;
    Property<double> innerSpacing;

    Box box_;
};

} // namespace cc
