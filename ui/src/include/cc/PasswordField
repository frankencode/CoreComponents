#pragma once

#include <cc/TextField>

namespace cc {

/** \class PasswordField cc/PasswordField
  * \ingroup ui
  * \brief %Password input field
  */
class PasswordField final: public TextField
{
public:
    /** Create a primordial password input field
      */
    PasswordField() = default;

    /** Create a new password input field
      * \param label %Label text
      * \param self Reference to newly created object
      */
    explicit PasswordField(const String &label, Out<PasswordField> self = None{});

    /** Get the password entered by the user
      */
    String password() const;
};

} // namespace cc
