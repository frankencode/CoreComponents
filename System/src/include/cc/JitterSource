#pragma once

#include <cc/Stream>

namespace cc {

/** \class JitterSource cc/JitterSource
  * \ingroup crypto
  * \brief Generate random bytes from scheduling noise
  * \todo quality control on generated bytes
  */
class JitterSource final: public Stream
{
public:
    /** Create a new jitter source
      * \param rate %Data rate (in bytes/second)
      */
    explicit JitterSource(double rate = 1);

private:
    struct State;
};

} // namespace cc
