#pragma once

#include <cc/syntax/SyntaxNode>

namespace cc::syntax {

/** \class MatchNode cc/syntax/MatchNode
  * \brief %Match the next character with a custom function
  */
class MatchNode final: public SyntaxNode
{
public:
    /** \param match Function to use to match the next character (returns true if matches)
      */
    explicit MatchNode(std::function<bool(char)> &&match);

private:
    struct State;
};

inline SyntaxNode::SyntaxNode(std::function<bool(char)> &&match)
{
    *this = MatchNode{std::move(match)};
}

} // namespace cc::syntax
