#pragma once

namespace cc::buckets {

class BucketStop
{
public:
    BucketStop() = default;

    BucketStop(BucketStop *pred, BucketStop *succ):
        succ_{succ},
        pred_{pred}
    {
        if (pred) pred->succ_ = this;
        if (succ) succ->pred_ = this;
    }

    BucketStop *succ_ { nullptr };
    BucketStop *pred_ { nullptr };
    unsigned fill_ { 0 };
    unsigned slotIndex_ { 0 };
};

} // namespace cc::buckets
