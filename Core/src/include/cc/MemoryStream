#pragma once

#include <cc/Stream>

namespace cc {

/** \class MemoryStream cc/MemoryStream
  * \ingroup streams
  * \brief Read from and write to an underlying memory buffer
  * \see ReplaySource, CaptureSink
  */
class MemoryStream final: public Stream
{
public:
    explicit MemoryStream(const Bytes &buffer);

private:
    struct State;
};

} // namespace cc
