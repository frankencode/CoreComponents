#pragma once

namespace cc {

/** \class Asc cc/order
  * \brief Ascending sort order
  */
class Asc
{
public:
    template<class A, class B>
    bool operator()(const A &a, const B &b) const { return a < b; }
};

/** \class Desc cc/order
  * \brief Descending sort order
  */
class Desc
{
public:
    template<class A, class B>
    bool operator()(const A &a, const B &b) const { return b < a; }
};

} // namespace cc
