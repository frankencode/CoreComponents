#pragma once

#include <cc/Object>

namespace cc {

/** \class Singleton cc/Singleton
  * \ingroup objects
  * \brief %Process-wide singletons
  * \see Object::initOnce(), Object::initOncePerThread()
  */
class Singleton: public Object
{
protected:
    template<class T>
    static Handle<T> &handle()
    {
        static Handle<T> handle_ { new T };
        return handle_;
    }

    template<class T>
    static void destroy()
    {
        handle<T>() = Handle<T>{};
    }

    /** Get access to the singleton instance
      */
    template<class T>
    static T *instance()
    {
        return &handle<T>()();
    }

    /** Create a null singleton
      */
    Singleton() = default;

    /** Initialize singleton object with instance \a state
      */
    explicit Singleton(State *state):
        Object{state, Alias{}}
    {}
};

} // namespace cc
