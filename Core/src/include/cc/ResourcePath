#pragma once

#include <cc/String>

namespace cc {

/** \class ResourcePath cc/ResourcePath
  * \ingroup misc
  * \brief Automatically map resource paths to real file system paths
  */
class ResourcePath
{
public:
    ResourcePath(const String &path);
    operator String() const;

private:
    String path_;
};

} // namespace cc
