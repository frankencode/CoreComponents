#pragma once

#include <cc/String>

namespace cc {

/** \class ResourceGuard cc/ResourceGuard
  * \brief %Resource context guard
  * \see ResourceContext
  */
class ResourceGuard
{
public:
    /** Place a scope guard for \a resource
      */
    ResourceGuard(const String &resource);

    /** Disband the scope guard
      */
    ~ResourceGuard();
};

} // namespace cc
