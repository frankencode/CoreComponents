#pragma once

namespace cc {

/** \class Guard cc/Guard
  * \brief %Mutex guard
  * \tparam T %Mutex type
  */
template<class T>
class Guard final
{
public:
    /** Post guard: acquire \a mutex
      */
    explicit Guard(T &mutex): mutex_{mutex} { mutex_.acquire(); }

    /** Disband guard: release \a mutex
      */
    ~Guard() { mutex_.release(); }

private:
    T &mutex_;
};

} // namespace cc
