#pragma once

namespace cc {

/** \class IndexTracking cc/IndexTracking
  * \brief Index tracking support
  * \tparam T Item type
  */
template<class T>
class IndexTracking
{
public:
    /** Set index tracking handle
      */
    static void setHandle(T &item, void *handle) {}

    /** Get index tracking handle
      */
    static void *handle(const T &item) { return nullptr; }
};

} // namespace cc
