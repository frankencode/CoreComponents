#pragma once

#include <cc/Fun>

namespace cc {

/** \class ScopeGuard cc/ScopeGuard
  * \ingroup basics
  * \brief Call cleanup function on scope exit
  */
class ScopeGuard
{
public:
    /** Post scope guard \a cleanup function
      */
    ScopeGuard(Fun<void()> &&cleanup): cleanup_{move(cleanup)} {}

    /** Disband scope guard: call \a cleanup function
      */
    ~ScopeGuard() { cleanup_(); }

private:
    Fun<void()> cleanup_;
};

} // namespace cc
