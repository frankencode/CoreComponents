#pragma once

#include <cc/Stream>

namespace cc {
namespace crypto {

/** \class RandomSource cc/crypto/RandomSource
  * \brief Pseudo random number source of the system
  */
class RandomSource: public Stream
{
public:
    using Instance = Stream;

    /** Open a new random number source
      */
    RandomSource(const CharArray *salt = nullptr);

    Instance *operator->() { return source_; }
    operator Stream *() { return source_; }

private:
    Ref<Stream> source_;
};

}} // namespace cc::crypto
