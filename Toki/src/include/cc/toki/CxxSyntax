#pragma once

#include <cc/toki/HighlightingSyntax>

namespace cc::toki {

class CxxSyntax final: public HighlightingSyntax
{
public:
    CxxSyntax();

    const SyntaxRule &commentLine() const;
    const SyntaxRule &commentText() const;

private:
    struct State;

    const State &me() const;
};

} // namespace cc::toki
