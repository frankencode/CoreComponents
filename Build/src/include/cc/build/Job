#pragma once

#include <cc/build/Message>
#include <cc/String>

namespace cc::build {

class Job: public Message
{
public:
    Job() = default;

    explicit Job(const String &command);

    String command() const;

    int status() const;
    String outputText() const;

    void registerDerivative(Job &job);
    bool getNextDerivative(Out<Job> derivative);

    int countDown() const;

    bool run();
    bool finish();

protected:
    friend class Object;

    struct State;

    explicit Job(State *newState);

    const State &me() const;
    State &me();
};

} // namespace cc::build
