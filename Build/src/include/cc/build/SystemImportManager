#pragma once

#include <cc/Object>
#include <cc/String>

namespace cc::build {

/** Keep track of all system installed importable modules
  */
class SystemImportManager final: public Object
{
public:
    SystemImportManager();

    bool lookupModule(const String &module, Out<String> source) const;

private:
    struct State;

    const State &me() const;
};

} // namespace cc::build
