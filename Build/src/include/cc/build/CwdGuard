#pragma once

#include <cc/build/BuildShell>
#include <cc/Process>

namespace cc::build {

class CwdGuard
{
public:
    CwdGuard(const String &dirPath, const BuildShell &shell):
        shell_{shell},
        cwdSaved_{Process::cwd()}
    {
        shell.cd(dirPath);
    }

    ~CwdGuard()
    {
        shell_.cd(cwdSaved_);
    }

private:
    const BuildShell &shell_;
    String cwdSaved_;
};

} // namespace cc::build
