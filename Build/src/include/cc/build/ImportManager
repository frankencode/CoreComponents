#pragma once

#include <cc/Object>
#include <cc/String>

namespace cc::build {

class ImportManager final: public Object
{
public:
    ImportManager();

    bool registerModule(const String &name, const String &source, Out<String> otherSource);
    bool lookupModule(const String &name, Out<String> source);

private:
    struct State;

    State &me();
    const State &me() const;
};

} // namespace cc::build
