#include <cc/build/Job>
#include <cc/Mutex>

namespace cc::build {

class WaitableJob final: public Job
{
public:
    WaitableJob() = default;

    explicit WaitableJob(const String &command);

    void wait();

    void notify();

private:
    struct State;

    State &me();
};

} // namespace cc::build
