#pragma once

#include <cc/Exception>

namespace cc::build {

class CodyError final: public Exception
{
public:
    CodyError() = default;

    explicit CodyError(const String &message):
        message_{message},
        error_ { true }
    {}

    String message() const override
    {
        return message_;
    }

    explicit operator bool() const
    {
        return error_;
    }

private:
    String message_;
    bool error_ { false };
};

} // namespace cc::build
