#pragma once

#include <cc/string>
#include <cc/Map>
#include <cc/Stream>

namespace cc {
namespace http {

class HttpConnection;

class HttpMessage: public Map<string, string>
{
public:
    static Ref<HttpMessage> create() { return new HttpMessage; }
    Stream *payload() const { return payload_; }

protected:
    friend class HttpConnection;
    HttpMessage() {}

    Ref<Stream> payload_;
};

}} // namespace cc::http
