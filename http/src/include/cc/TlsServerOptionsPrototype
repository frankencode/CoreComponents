#pragma once

#include <cc/MetaPrototype>

namespace cc {

/** \internal
  */
class TlsServerOptionsPrototype: public MetaPrototype
{
public:
    TlsServerOptionsPrototype():
        MetaPrototype{"TLS"}
    {
        establish("certificate", "");
        establish("private-key", "");
        establish("ciphers", "");
        establish("session-resumption-key-refresh", 3600.);
    }
};

} // namespace cc
