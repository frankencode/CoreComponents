#pragma once

#include <cc/build/BuildStage>

namespace cc::build {

/** \brief Invoke the compiler to determine source code dependencies
  */
class AnalyseStage: public BuildStage
{
public:
    bool run();

    List<String> previousSources() const { return previousSources_; }
    double cacheTime() const { return cacheTime_; }

private:
    List<String> previousSources_;
    double cacheTime_ { 0 };
};

} // namespace cc::build
