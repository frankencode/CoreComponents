#pragma once

#include <cc/Color>
#include <cc/meta/yason>

namespace cc {
namespace toki {

using namespace cc::meta;

class Palette;

class Style: public MetaObject
{
public:
    static Ref<Style> create() { return new Style; }

    String ruleName() const { return ruleName_; }
    int rule() const { return rule_; }
    Color ink() const { return ink_; }
    Color paper() const { return paper_; }
    bool bold() const { return bold_; }
    bool italic() const { return italic_; }

private:
    friend class Palette;

    Style() {}
    Ref<MetaObject> produce() const override;
    void define() override;
    void realize(const CharArray *text, Token *objectToken) override;

    String ruleName_;
    int rule_;
    Color ink_;
    Color paper_;
    bool bold_;
    bool italic_;
};

}} // namespace cc::toki
