#pragma once

#include <cc/syntax_node/SyntaxNode>

namespace cc::syntax {

/** \brief Unconditionally fail to match at the current text position
  */
class FailNode final: public SyntaxNode
{
public:
    /** &nbsp;
      */
    FailNode();

private:
    struct State;
};

} // namespace cc::syntax
